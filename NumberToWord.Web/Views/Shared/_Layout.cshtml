<!DOCTYPE html>
<html lang="en" data-ng-app="main">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="keywords" content="">

    <link href='http://fonts.googleapis.com/css?family=Dosis:200,400,600' rel='stylesheet' type='text/css'>

    <link href="~/Content/themes/outlook/style/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/themes/outlook/style/font-awesome.css">


    <link href="~/Content/themes/outlook/style/ddlevelsmenu-base.css" rel="stylesheet">
    <link href="~/Content/themes/outlook/style/ddlevelsmenu-topbar.css" rel="stylesheet">
    <link href="~/Content/themes/outlook/style/style.css" rel="stylesheet">
    <link href="~/Content/themes/outlook/style/blue.css" rel="stylesheet">
    <link href="~/Content/themes/outlook/style/bootstrap-responsive.css" rel="stylesheet">
    <link href="~/Content/themes/outlook/style/flexslider.css" rel="stylesheet">
    <link href="~/Content/themes/outlook/style/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body>
    <div class="fixedbar">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="logo">
                        <div class="pull-left">
                            <h1><a href="#"><i class="icon-thumbs-up"></i> @ViewBag.Title</a></h1>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>


    <div class="main">
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>


    <footer>
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="fpadd">Copyright &copy; 2014 - <a href="#">Number To Word</a> </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/easing.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/ddlevelsmenu.js"></script>
    <script type="text/javascript" src="~/Scripts/flexslider.js"></script>
    <script type="text/javascript" src="~/Scripts/isotype.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.prettyPhoto.js"></script>
    <script type="text/javascript" src="~/Scripts/custom.js"></script>
    <script type="text/javascript" src="~/AngularJS/numberToWordController.js"></script>
    <script type="text/javascript" src="~/AngularJS/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>